<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <demo.app.paintball.map.rendering.MapViewImpl
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/gameDetailLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/darkTransparentGray"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBlueTeam"
                style="@style/playerCount"
                android:text="10/12"
                android:textColor="@color/blueTeam" />

            <TextView
                style="@style/gameDetailText"
                android:text="@string/players" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/gameDetailText"
                android:text="@string/time" />

            <TextView
                android:id="@+id/tvRemainingTime"
                style="@style/playerCount"
                android:text="4:45"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRedTeam"
                style="@style/playerCount"
                android:text="9/12"
                android:textColor="@color/redTeam" />

            <TextView
                style="@style/gameDetailText"
                android:text="@string/players" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>